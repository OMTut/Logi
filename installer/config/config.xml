<?xml version="1.0" encoding="UTF-8"?>
<Installer>
    <Name>Logi</Name>
    <Version>1.0.0</Version>
    <Title>Logi Setup - Star Citizen Log Monitor</Title>
    <Publisher>Logi</Publisher>
    <WizardShowPageList>false</WizardShowPageList>
    
    <!-- Default installation directory -->
    <TargetDir>@ApplicationsDir@/Logi</TargetDir>
    
    <!-- Admin rights not required -->
    <AdminTargetDir>@ApplicationsDir@/Logi</AdminTargetDir>
    
    <!-- Allow users to select components -->
    <AllowNonAsciiCharacters>true</AllowNonAsciiCharacters>
    <AllowSpaceInPath>true</AllowSpaceInPath>
    
    <!-- Maintenance tool (for updates and uninstall) -->
    <MaintenanceToolName>LogiMaintenanceTool</MaintenanceToolName>
    
    <!-- Start menu and desktop shortcuts -->
    <CreateLocalRepository>false</CreateLocalRepository>
    
    <!-- Disable component selection page for simple installer -->
    <AllowUnstableComponents>false</AllowUnstableComponents>
    <SupportsModify>false</SupportsModify>
    
    <!-- Control script to skip component selection entirely -->
    <ControlScript>controlscript.qs</ControlScript>
    
    <!-- Custom styling to match app theme -->
    <StyleSheet>style.qss</StyleSheet>
    
    <!-- Window appearance settings -->
    <WizardStyle>Modern</WizardStyle>
    <WizardDefaultWidth>600</WizardDefaultWidth>
    <WizardDefaultHeight>500</WizardDefaultHeight>
</Installer>
